<section class="container">
    <a href="/askdevs"><h2 class="askDevs-header">askDevs</h2></a>
    
</section>
<section class="container">
    <div class="row">
        <form class="new-question-form col-sm-4">
        <div>
            <label for="question-text">Ask a Question</label>
            <input type="text" id="question-text" name="question-text" required />
        </div>
            <button type="submit" class="grey-red-btn solo">Submit</button>
        </form>
    </div>
</section>
<section class="my-questions container justify-content-center">
    <h3> Click on a Question to Edit</h3>
    <h4 class="user-questions">{{user.username}}'s Questions</h4>
    <ul class="question-list col">
        {{#each user.questions}}
        <li class="text-left">
            {{> user-questions }}
        </li class="text-left">
        {{/each}}
    </ul>
</section>

<script src="/javascript/add-question.js"></script>